<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ControlFragment">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:background="#55888888"
        android:gravity="center_vertical"
        android:padding="4dp"
        android:text="@string/device_control"
        android:textColor="#000000"
        android:textSize="16dp"
        android:textStyle="bold" />

    <include layout="@layout/layout_control" />

    <!--position-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="进度"
            android:textColor="#000000"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/ctrl_position_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="-/-"
            android:textSize="16dp" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/ctrl_seek_position"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp" />

    <!--Volume-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="音量"
            android:textColor="#000000"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/ctrl_volume_info"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:text="-/-"
            android:textSize="16dp" />

    </LinearLayout>

    <SeekBar
        android:id="@+id/ctrl_seek_volume"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="12dp" />

    <!--status-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center_vertical"
            android:padding="4dp"
            android:text="状态"
            android:textColor="#000000"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/ctrl_status_info"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="12dp"
            android:paddingRight="12dp"
            android:textSize="16dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="60dp" />


</LinearLayout>